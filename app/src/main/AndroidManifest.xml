<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.founderscompany">

    <application
        android:icon="@drawable/pictures"
        android:label="@string/app_name"
        android:roundIcon="@drawable/pictures"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoundersCompany">
        <activity
            android:name=".activities.InfoActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.FoundersCompany.NoActionBar" />
        <activity
            android:name=".activities.LogoActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.FoundersCompany.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.TextContentActivity" />
    </application>

</manifest>